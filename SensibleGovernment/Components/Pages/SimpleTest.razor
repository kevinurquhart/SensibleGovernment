@page "/simpletest"
@rendermode InteractiveServer

<PageTitle>Simple Test</PageTitle>

<div class="container py-4">
    <h2>Simple Test Page</h2>
    <p>If you can see this, Blazor is working!</p>

    <button class="btn btn-primary" @onclick="IncrementCount">
        Click me: @count
    </button>

    <div class="mt-3">
        <h4>Configuration Check:</h4>
        <ul>
            <li>Environment: @Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")</li>
            <li>Current Directory: @Directory.GetCurrentDirectory()</li>
            <li>Time: @DateTime.Now</li>
        </ul>
    </div>
</div>

@code {
    private int count = 0;

    private void IncrementCount()
    {
        count++;
    }
}