{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Email": {
    "Enabled": false, // Set to true in production with real SMTP
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUser": "your-email@gmail.com",
    "SmtpPass": "your-app-specific-password",
    "FromEmail": "noreply@sensiblecitizen.com",
    "FromName": "The Sensible Citizen"
  },
  "Moderation": {
    "AutoHideReportThreshold": 3,
    "AutoHideNegativeScore": -5,
    "EnableShadowBanning": true,
    "EnableKeywordFiltering": true
  }
}
